{
  "name": "retrobus",
  "version": "1.9.4",
  "description": "An event bus that allows listeners to be retroactive",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "type": "module",
  "types": "dist/esm/index.d.ts",
  "repository": "https://github.com/jcalixte/retrobus",
  "author": "Julien Calixte <julienc@bam.tech>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest --coverage && rm -rf coverage",
    "test:watch": "vitest --watch",
    "coveralls": "vitest --coverage && coveralls < coverage/lcov.info && rm -rf coverage",
    "lint": "prettier --write .",
    "prepare": "tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "release": "release-it"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-typescript": "^7.23.3",
    "@types/node": "^20.10.5",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/coverage-v8": "^1.1.0",
    "c8": "^8.0.1",
    "coveralls": "^3.1.1",
    "prettier": "^3.1.1",
    "release-it": "^17.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "event",
    "retroactive",
    "bus",
    "bus-event",
    "emit",
    "addListener",
    "removeListener"
  ]
}
